<h1>人氣餐廳</h1>
<hr>
<div>
  {{#each restaurants}}
  <div class="card">
    <div class="row">
      <div class="col-4">
        <img src="{{this.image}}" alt="img error" style="height: 250px ;width:250px;">
      </div>
      <div class="col-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="badge badge-secondary">收藏人數: {{this.FavoriteNumber}}</span>
          <p>{{this.description}}</p>
          <a href="/restaurant/{{this.id}}" class="btn btn-primary">詳細資訊</a>
          {{#if this.isFavorited}}
          <form action="/user/{{this.id}}/favorite?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除最愛</button>
          </form>
          {{else}}
          <form action="/user/{{this.id}}/favorite" method="POST" style="display: inline;">
            <button class="btn btn-primary" type="submit">加到最愛</button>
          </form>
          {{/if}}

        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>