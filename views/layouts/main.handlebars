<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/restaurant">餐廳評論網</a>
      <div class="collapse navbar-collapse">
        <div class="navbar-nav">
          {{#if user.isAdmin}}
          <a class="nav-item nav-link" href="/admin/restaurant">Admin Restuarants</a>
          <a class="nav-item nav-link" href="/admin/user">Admin Users</a>
          <a class="nav-item nav-link" href="/admin/category">Admin Categories</a>
          {{/if}}
        </div>
        {{#if user}}
        <div class="ml-auto">
          <span class="navbar-text">Hi!, {{user.email}}</span>
          <a href="/user/{{user.id}}">Profile</a>
          <a class="btn btn-success" href="/logout">logout</a>
        </div>
        {{/if}}
      </div>
    </nav>

    {{#if error_messages}}
    <div class="alert alert-danger" role="alert">
      {{error_messages}}
    </div>
    {{/if}}
    {{#if success_messages}}
    <div class="alert alert-success" role=s"alert">
      {{success_messages}}
    </div>
    {{/if}}
  </header>

  <main class="container mt-4">
